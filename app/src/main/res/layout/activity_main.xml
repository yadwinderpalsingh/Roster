<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ysingh9481.roster.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:text="Name"
        android:id="@+id/textView"
        android:textSize="40px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="400px"
        android:layout_height="80px"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/radioButton" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thinks We Are Going Steady"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:text="Eye Color"
        android:id="@+id/textView2"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20px"
        android:textSize="40px" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/editText"
        android:spinnerMode="dropdown"
        android:layout_alignEnd="@+id/checkBox"
        android:layout_alignBottom="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:text="Date of Birth"
        android:id="@+id/textView3"
        android:textSize="40px"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20px" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="75px"
        android:id="@+id/dateofbirth"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/spinner"
        android:layout_alignEnd="@+id/spinner"
        android:layout_alignBottom="@+id/textView3"
        android:focusable="false"
        android:onClick="getDateofBirth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shirt"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textSize="40px"
        android:layout_marginTop="20px" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XS"
        android:id="@+id/radioButton"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="30px"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:id="@+id/radioButton2"
        android:checked="false"
        android:layout_marginStart="25dp"
        android:layout_above="@+id/radioButton5"
        android:layout_toEndOf="@+id/radioButton" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:id="@+id/radioButton3"
        android:checked="false"
        android:layout_above="@+id/radioButton5"
        android:layout_alignStart="@+id/radioButton6" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:id="@+id/radioButton4"
        android:checked="false"
        android:layout_below="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XL"
        android:id="@+id/radioButton5"
        android:layout_alignBottom="@+id/radioButton4"
        android:layout_alignStart="@+id/radioButton2"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXL"
        android:id="@+id/radioButton6"
        android:checked="false"
        android:layout_below="@+id/radioButton3"
        android:layout_alignEnd="@+id/dateofbirth"
        android:layout_marginRight="10px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:text="Pant Size"
        android:id="@+id/textView5"
        android:layout_below="@+id/radioButton4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20px"
        android:textSize="40px"
        android:editable="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/radioButton4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:text="Shirt Size"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20px"
        android:textSize="40px" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/radioButton4"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:text="Shoe Size"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:textSize="40px"
        android:layout_marginTop="20px" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar3"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/seekBar2"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitorder"
        android:layout_below="@+id/seekBar3"
        android:layout_alignEnd="@+id/seekBar3"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/radioButton2" />

</RelativeLayout>
